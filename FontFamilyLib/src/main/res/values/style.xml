<resources>

    <!--文字字体基类-->
    <style name="BaseTextViewStyle">
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!--文字细体-->
    <style name="BaseTextViewStyle.Light" parent="BaseTextViewStyle">
        <item name="android:fontFamily">@font/notosanshans_light</item>
    </style>

    <!--文字Medium-->
    <style name="BaseTextViewStyle.Medium" parent="BaseTextViewStyle">
        <item name="android:fontFamily">@font/notosanshans_medium</item>
    </style>

    <!--文字普通-->
    <style name="BaseTextViewStyle.Regula" parent="BaseTextViewStyle">
        <item name="android:fontFamily">@font/notosanshans_regula</item>
    </style>

    <!--数字字体粗体-->
    <style name="NumBold">
        <item name="android:fontFamily">@font/din_alternate_bold</item>
    </style>
    <!--数字字体细体-->
    <style name="NumRegular">
        <item name="android:fontFamily">@font/din_regular</item>
    </style>
</resources>